# Base de données PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/sunuyoon?schema=public"

# JWT Secret (Générez une clé sécurisée avec openssl rand -base64 32)
JWT_SECRET="votre-secret-jwt-super-securise-ici"
JWT_REFRESH_SECRET="votre-secret-refresh-jwt-ici"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Serveur
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Rate Limiting (requêtes par fenêtre de temps)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Twilio pour SMS (Notifications et vérification)
TWILIO_ACCOUNT_SID="votre-twilio-account-sid"
TWILIO_AUTH_TOKEN="votre-twilio-auth-token"
TWILIO_PHONE_NUMBER="+221xxxxxxxxx"

# Email (Nodemailer avec Gmail ou autre SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="votre-email@gmail.com"
SMTP_PASS="votre-mot-de-passe-app"
EMAIL_FROM="Sunu Yoon <noreply@sunuyoon.sn>"

# Wave API (Paiements mobiles Sénégal)
WAVE_API_KEY="votre-wave-api-key"
WAVE_API_SECRET="votre-wave-api-secret"
WAVE_MERCHANT_ID="votre-wave-merchant-id"
WAVE_WEBHOOK_SECRET="votre-wave-webhook-secret"
WAVE_BASE_URL="https://api.wave.com/v1"

# Orange Money API (Paiements mobiles Sénégal)
ORANGE_MONEY_API_KEY="votre-orange-money-api-key"
ORANGE_MONEY_MERCHANT_KEY="votre-orange-merchant-key"
ORANGE_MONEY_PIN="votre-pin-marchand"
ORANGE_MONEY_BASE_URL="https://api.orange.com/orange-money-webpay/sn/v1"

# Firebase pour Push Notifications (optionnel)
FIREBASE_PROJECT_ID="votre-firebase-project-id"
FIREBASE_PRIVATE_KEY="votre-firebase-private-key"
FIREBASE_CLIENT_EMAIL="votre-firebase-client-email"

# Sentry pour monitoring des erreurs (optionnel)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Logging
LOG_LEVEL="info"
